@model FujiyBlog.Core.DomainObjects.PostComment
@{
    ViewBag.Title = "Edit";
    Layout = "_Layout";
}
<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    
        @Html.HiddenFor(model => model.Id)
        @if (Model.Author == null)
        {
            <div class="form-group">
                <label asp-for="AuthorName" class="control-label"></label>
                <input asp-for="AuthorName" class="form-control" />
                <span asp-validation-for="AuthorName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="AuthorEmail" class="control-label"></label>
                <input asp-for="AuthorEmail" class="form-control" />
                <span asp-validation-for="AuthorEmail" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="AuthorWebsite" class="control-label"></label>
                <input asp-for="AuthorWebsite" class="form-control" />
                <span asp-validation-for="AuthorWebsite" class="text-danger"></span>
            </div>
        }
        else
        {
            <div class="form-group">
                <label asp-for="Author.UserName" class="control-label"></label>
                <input asp-for="Author.UserName" class="form-control" readonly />
            </div>


            <div class="form-group">
                <label asp-for="Author.Email" class="control-label"></label>
                <input asp-for="Author.Email" class="form-control" readonly />
            </div>
        }

    <div class="form-group">
        <label asp-for="Comment" class="control-label"></label>
        <textarea asp-for="Comment" class="form-control"></textarea>
        <span asp-validation-for="Comment" class="text-danger"></span>
    </div>

        
            <input type="submit" value="Save" class="btn btn-primary" />
        
    
}
<a asp-action="Index" class="btn btn-default pull-right">Back</a>
