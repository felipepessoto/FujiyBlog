@model FujiyBlog.Web.Areas.Admin.ViewModels.AdminSettingsSocialNetworks
@{
    ViewBag.Title = "Social Network Settings";
    Layout = MVC.Admin.Setting.Views._Layout;
}
<h2>
    Social Network Settings
</h2>
@using (Html.BeginForm())
{
    <fieldset>
        <legend>Facebook</legend>
        <div class="editor-label">
            @Html.LabelFor(model => model.EnableFacebookLikePosts)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.EnableFacebookLikePosts)
            @Html.ValidationMessageFor(model => model.EnableFacebookLikePosts)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.FacebookAdminIds)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.FacebookAdminIds)
            @Html.ValidationMessageFor(model => model.FacebookAdminIds)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.FacebookAppId)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.FacebookAppId)
            @Html.ValidationMessageFor(model => model.FacebookAppId)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.OpenGraphImageUrl)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.OpenGraphImageUrl)
            @Html.ValidationMessageFor(model => model.OpenGraphImageUrl)
        </div>
    </fieldset>
    <fieldset>
        <legend>Twitter</legend>
        <div class="editor-label">
            @Html.LabelFor(model => model.EnableTwitterSharePosts)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.EnableTwitterSharePosts)
            @Html.ValidationMessageFor(model => model.EnableTwitterSharePosts)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.TwitterBlogAccount)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.TwitterBlogAccount)
            @Html.ValidationMessageFor(model => model.TwitterBlogAccount)
        </div>
    </fieldset>
    <fieldset>
        <legend>Google+</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.EnableGooglePlusOnePosts)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.EnableGooglePlusOnePosts)
            @Html.ValidationMessageFor(model => model.EnableGooglePlusOnePosts)
        </div>
    </fieldset>
    <p>
        <input type="submit" value="Save" />
    </p>
}
