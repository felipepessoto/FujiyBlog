@model FujiyBlog.Web.Areas.Admin.ViewModels.AdminStorageSettings
@{
    ViewBag.Title = "Storage Settings";
    Layout = "_Layout";
}
<h2>
    Storage Settings
</h2>
@using (Html.BeginForm())
{
    <legend>Storage</legend>

    <div class="form-group">
        <label asp-for="FileUploadService" class="control-label"></label>
        <select asp-for="FileUploadService" asp-items="Model.FileUploadServices" class="form-control"></select>
        <span asp-validation-for="FileUploadService" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="AzureStorageAccountName" class="control-label"></label>
        <input asp-for="AzureStorageAccountName" class="form-control" />
        <span asp-validation-for="AzureStorageAccountName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="AzureStorageAccountKey" class="control-label"></label>
        <input asp-for="AzureStorageAccountKey" class="form-control" />
        <span asp-validation-for="AzureStorageAccountKey" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="AzureStorageUploadContainerName" class="control-label"></label>
        <input asp-for="AzureStorageUploadContainerName" class="form-control" />
        <span asp-validation-for="AzureStorageUploadContainerName" class="text-danger"></span>
    </div>

    <button class="btn btn-primary" type="submit">Save</button>

}
