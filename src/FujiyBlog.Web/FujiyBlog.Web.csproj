  </PropertyGroup>
  <ItemGroup>
    <ProjectReference Include="..\FujiyBlog.Core\FujiyBlog.Core.csproj" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="Microsoft.ApplicationInsights" Version="2.2.0" />
