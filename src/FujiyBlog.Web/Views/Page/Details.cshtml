@using FujiyBlog.Web.Extensions
@model FujiyBlog.Core.DomainObjects.Page
@{
    Layout = this.FindLayoutPath("_Layout");
}
<div id="page">
    <h1>
        @Model.Title</h1>
    <div>
        @Html.Raw(Model.Content)
    </div>
    @if (Request.IsAuthenticated)
    {
        <div id="admin">
            @Html.ActionLink("Edit", MVC.Admin.Page.Edit(Model.Id))</div>
    }
</div>
