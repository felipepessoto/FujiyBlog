@using FujiyBlog.Web.Extensions
@model FujiyBlog.Core.DomainObjects.Page
@{
    Layout = "_Layout";
}
<div id="page">
    <h1>
        @Model.Title
    </h1>
    <div>
        @Html.Raw(Model.Content)
    </div>
    @if (User.Identity.IsAuthenticated)
    {
<div id="admin">
    <a asp-area="Admin" asp-controller="Page" asp-action="Edit" asp-route-id="@Model.Id">@FujiyBlog.Web.Resources.Labels.Edit</a>
</div>
    }
</div>
