@using Newtonsoft.Json.Linq
@model FujiyBlog.Core.DomainObjects.WidgetSetting

@if (User.Identity.IsAuthenticated)
{
    Layout = "Widget.cshtml";

    JObject settings = JObject.Parse(Model.Settings ?? "{}");

    <h4>@Html.Raw(settings.Value<string>("Title") ?? "Administration")</h4>
    <div class="content">
        <ul class="toprounded">
            <li><a asp-controller="Post" asp-action="Index" asp-area="Admin">@FujiyBlog.Web.Resources.Labels.Posts</a></li>
            <li>@Html.ActionLink(@FujiyBlog.Web.Resources.Labels.Comments, "Index", "Comment", new { area = "Admin" })</li>
            <li>@Html.ActionLink(@FujiyBlog.Web.Resources.Labels.Pages, "Index", "Page", new { area = "Admin" })</li>
            <li>@Html.ActionLink(@FujiyBlog.Web.Resources.Labels.Users, "Index", "User", new { area = "Admin" })</li>
            <li>@Html.ActionLink(@FujiyBlog.Web.Resources.Labels.Settings, "Index", "Setting", new { area = "Admin" })</li>
            <li>@Html.ActionLink(@FujiyBlog.Web.Resources.Labels.ChangePassword, "ChangePassword", "Account", new { area = "Admin" })</li>
        </ul>
    </div>
}